<%= render 'navbar'%>

<div class="container mt-3">

    <div class="title">
        <h2><%= @flat.name %></h2>
    </div>

    <div class="infos mt-3 mb-2">
        <h5>Infos</h5>
        <div class="d-flex mt-4">
            <i class="fas fa-map-marker mr-2 mb-3"></i><span class="mr-2 mb-3 mt-0" style="font-weight: bold;">Location:</span><span><%= @flat.address %></span>
        </div>
        <div class="d-flex align-items-center">
            <i class="fas fa-user-friends mr-2 mb-3"></i><span class="mr-2 mb-3" style="font-weight: bold;">Price per night:</span><span class="mb-3"><%= @flat.price_per_night %></span>
        </div>
        <div class="d-flex align-items-center">
           <i class="fas fa-euro-sign mr-2 mb-3"></i><span class="mr-2 mb-3" style="font-weight: bold;">Number of guests:</span><span class="mb-3"><%= @flat.number_of_guests %></span>
        </div>
    </div>

    <div class="descripton">
        <h5>Description</h5>
        <p><%= @flat.description %></p>
    </div>

    <div class="d-flex">
        <button class="btn btn-success mr-3">Edit</button>
        <button class=" btn btn-outline-danger">Delete</button>
    </div>  

</div>