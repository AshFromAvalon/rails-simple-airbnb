<%= render 'navbar'%>

<div class="bg-cover" style="background-image: url('<%= @flat.pic_url %>')"></div>

<div class="container margin-top-negative">

 
    <div class="row">
        <div class="col-8">

            <div class="flat-block flat-title">
                <h2><%= @flat.name %></h2>
                <h4><%= @flat.address %></h4>
            </div>

            <div class="flat-block flat-more">
                <h3>A bit more about this flat...</h3>
                <p><%= @flat.description %></p>
                <div class="bg-cover" style="background-image: url('https://www.dsdinc.com/wp-content/uploads/2017/08/map-placeholder.jpg')"></div>
            </div>
        </div>

        <div class="col-4">

            <div class="flat-block">
                <h5 class="mb-3">Book this flat (I'm a placeholder)</h5>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">From:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="<%= Date.today %>" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">To:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="<%= Date.today %>" aria-label="Username" aria-describedby="basic-addon1">
                </div>
                <button class="btn btn-success btn-book">Book this flat</button>
            </div>

            <div class="flat-block">
                <h4 class="mb-3">Details</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-friends mr-2"></i><span><%= @flat.number_of_guests %></span>
                    </div>
                    <div class="d-flex ml-3 align-items-center">
                        <i class="fas fa-euro-sign mr-2"></i><span><%= @flat.price_per_night %></span>
                    </div>
                </div>
            </div>

            <div class="p-3 mt-3">
                <h4 class="mb-3">Actions</h4>
                <div class="d-flex">
                    <button class="btn btn-success btn-book mr-3">Edit</button>
                    <button class=" btn btn-outline-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>